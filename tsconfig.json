{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "removeComments": true,
    "noEmitOnError": false,
    "noResolve": false,
    "experimentalDecorators": true,
    // "strict": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    //"sourceMap": true,
    "baseUrl": "./src/",
    "outDir": "./dev/",
    "allowJs": true
  },
  "compileOnSave": true,
  "include": [
    "typings/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/Traveler.ts",
    "src/underscore.js",
    "dev",
    "node_modules"
  ]
}
