{
  "compilerOptions": {
    "module": "amd",//commonjs",
    "target": "es6",
    "removeComments": true,
    "noEmitOnError": false,
    "noResolve": false,
    "experimentalDecorators": true,
    "strict": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    //"sourceMap": true,
    "baseUrl": "./src/",
    //"outDir": "./dev/",
    "allowJs": true,
    "watch": false,
    "outFile": "./release/main.js"
  },
  "compileOnSave": true,
  "include": [
    "typings/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/Traveler.ts",
    "src/underscore.js",
    "dev",
    "node_modules"
  ]
}
